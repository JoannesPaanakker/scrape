      <div class="spec-object-item">
        <div class="spec_img_container">
          <img src=<%= prop.photo %> class="spec_img img-responsive" alt="Property Photo"></img>
          <div class="spec_address"><%= prop.address %></div>
          <div class ="spec_portal"><%= prop.portal_id %></div>
          <div class="spec_price"><h5><%= prop.price %></h5></div>
