<div>
  <h1>Current Listings</h1>
  <ul>
    <% @properties.each do |prop| %>
      <div class="col-xs-12 col-lg-3">
        <div class="spec-object-item">
          <div class="spec_img_container">
            <img src=<%= prop.photo %> class="spec_img img-responsive" alt="Property Photo"></div>
            <div class="spec_address"><h3><%= prop.address %></h3>
              <div class="spec_description"><h4><%= prop.description %></h4>
              </div>
              <div class="spec_price"><h5><%= prop.price %></h5>
                <%= link_to "Property Details", property_path(prop), class:"btn btn-primary" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </ul>
