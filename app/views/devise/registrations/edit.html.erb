<div class="container">
  <div class="form">

    <ul class="tab-group">
      <li class="tab active"><a href="#signup">User Details</a></li>
    </ul>

    <div class="tab-content">
      <div id="signup">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="top-row">
          <div class="field-wrap">
            <label>
              First Name<span class="req"></span>
            </label>
            <%= f.text_field :first_name, required: false, autofocus: true %>
          </div>

          <div class="field-wrap">
            <label>
              <span class="req"></span>
            </label>
            <%= f.text_field :last_name, required: false, autofocus: true %>
          </div>
        </div>
        <div class="field-wrap">
          <label>
            Company Name<span class="req"></span>
          </label>
          <%= f.text_field :comp_name, required: false, autofocus: true %>
        </div>
        <div class="field-wrap">
          <label>
            Company Address<span class="req"></span>
          </label>
          <%= f.text_field :address, required: false, autofocus: true %>
        </div>
        <div class="field-wrap">
          <label>
            Company URL<span class="req"></span>
          </label>
          <%= f.text_field :comp_url, required: false, autofocus: true %>
        </div>
        <div class="field-wrap">
          <label>
            Phone number<span class="req"></span>
          </label>
          <%= f.text_field :phone_number, required: false, autofocus: true %>
        </div>
      </div>
      <div class="field-wrap">
        <label>
          Email Address<span class="req"></span>
        </label>
        <%= f.text_field :email, required: false, autofocus: true %>
      </div>
      <div class="field-wrap">
        <label>
          Current Password (confirmation)<span class="req">*</span>
        </label>
        <%= f.password_field :current_password, hint: "we need your current password to confirm your changes", required: true %>
      </div>
      <%= f.submit "Update" %>
      <% end %>
      <%= link_to "Cancel", :back %>
    </div>
  </div><!-- tab-content -->

</div> <!-- /form -->
</div>
<%= stylesheet_link_tag 'homepage', media: 'all' %>

