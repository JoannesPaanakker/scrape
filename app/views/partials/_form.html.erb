<div class="form">

      <ul class="tab-group">
        <li class="tab active"><a href="#signup">Sign Up</a></li>
        <li class="tab"><a href="#login">Log In</a></li>
      </ul>

      <div class="tab-content">
        <div id="signup">
          <h1>Sign Up for Free</h1>

<!--           <form action="/users" method="post"> -->
          <%= form_for(User.new, as: :user, url: registration_path(:user)) do |f| %>

          <div class="top-row">
            <div class="field-wrap">
              <label>
                First Name<span class="req">*</span>
              </label>
              <!-- <input type="text" required autocomplete="off" /> -->
              <%= f.text_field :first_name, required: false, autofocus: true %>
            </div>

            <div class="field-wrap">
              <label>
                Last Name<span class="req">*</span>
              </label>
              <!-- <input type="text"required autocomplete="off"/> -->
              <%= f.text_field :last_name, required: false, autofocus: true %>
            </div>
          </div>

          <div class="field-wrap">
            <label>
              Email Address<span class="req">*</span>
            </label>
<!--             <input type="email"required autocomplete="off"/> -->
            <%= f.text_field :email, required: true, autofocus: true %>
          </div>

          <div class="field-wrap">
            <label>
              Set A Password<span class="req">*</span>
            </label>
<!--             <input type="password"required autocomplete="off"/> -->
            <%= f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          </div>
          <div class="field-wrap">
            <label>
              Set A Password<span class="req">*</span>
            </label>
<!--             <input type="password"required autocomplete="off"/> -->
            <%= f.password_field :password_confirmation, required: true %>
          </div>
<!--           <button type="submit" class="button button-block"/>Get Started</button> -->

<!--           </form> -->
          <%= f.submit "Sign up" %>
        <% end %>
        </div>

        <div id="login">
          <h1>Welcome Back!</h1>

<!--            <form action="/users/sign_in" method="post"> -->
<!-- <div class="error_notification"></div> -->
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <%= flash[:notice] %>
            <div class="field-wrap">
            <label>
              Email Address<span class="req">*</span>
            </label>
            <!-- <input type="email"required autocomplete="off"/> -->
            <%= f.text_field :email, required: false, autofocus: true %>
          </div>

          <div class="field-wrap">
            <label>
              Password<span class="req">*</span>
            </label>
<!--             <input type="password"required autocomplete="off"/> -->
          <%= f.password_field :password, required: false %>
          </div>

          <p class="forgot"><a href="#">Forgot Password?</a></p>

<!--           <button type="submit" class="button button-block"/>Log In</button> -->
          <%= f.button "Log in" %>
          <% end %>
          <!-- </form> -->

        </div>

      </div><!-- tab-content -->

</div> <!-- /form -->
